<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardReqres"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/textReqresName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageReqresProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textReqresName"
        style="@style/HomeBlackNormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/textReqresEmail"
        app:layout_constraintEnd_toEndOf="@id/cardReqres"
        app:layout_constraintStart_toStartOf="@id/cardReqres"
        app:layout_constraintTop_toBottomOf="@id/cardReqres"
        tools:text="Vixx N" />

    <TextView
        android:id="@+id/textReqresEmail"
        style="@style/ReqresItalicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cardReqres"
        app:layout_constraintStart_toStartOf="@id/cardReqres"
        app:layout_constraintTop_toBottomOf="@id/textReqresName"
        tools:text="briandr@naver.com" />

</androidx.constraintlayout.widget.ConstraintLayout>