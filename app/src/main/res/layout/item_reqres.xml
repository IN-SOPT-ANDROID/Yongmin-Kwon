<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardReqres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textReqresName">

        <ImageView
            android:id="@+id/imageReqresProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textReqresName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HomeBlackNormalText"
        app:layout_constraintStart_toStartOf="@id/cardReqres"
        app:layout_constraintEnd_toEndOf="@id/cardReqres"
        app:layout_constraintTop_toBottomOf="@id/cardReqres"
        app:layout_constraintBottom_toTopOf="@id/textReqresEmail" />

    <TextView
        android:id="@+id/textReqresEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HomeBlackItalicText"
        app:layout_constraintStart_toStartOf="@id/cardReqres"
        app:layout_constraintEnd_toEndOf="@id/cardReqres"
        app:layout_constraintTop_toBottomOf="@id/textReqresName"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>