<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor_drawable</item>
    </style>

    <style name="HomeProfileWhiteText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomeProfileLightWhiteText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomeBlackBoldText">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HomeBlackItalicText">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HomeBlackNormalText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HomeGraNormalText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <style name="ReqresItalicText">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>